<resources>

    <!-- MainActivity and Shared strings -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- hide status bar -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ListCheck" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">@dimen/CheckBoxSize</item>
        <item name="android:layout_height">@dimen/CheckBoxSize</item>
        <item name="android:layout_margin">@dimen/ListMargin</item>
    </style>

    <style name="MessageScroll" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/DescribeTextBoxMargin</item>
    </style>

    <style name="GenericScroll" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="GenericLinear" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MessageLinear" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/DescribeTextBoxColor</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MessageText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/DescribeTextBoxPading</item>
        <item name="android:textSize">@dimen/DescribeTextSize</item>
        <item name="android:textColor">@color/DescribeTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/ok</item>
    </style>

    <!-- WhiteNoises -->
    <style name="whiteNoisesListLinear1a" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/WNCL1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="whiteNoisesListLinear1b" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/WNCL2</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="whiteNoisesListLinear2" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="whiteNoisesListLinear3" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="whiteNoisesListLinear4" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="whiteNoisesImages" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/ListMargin</item>
    </style>

    <style name="whiteNoisesText1" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ListTextSize</item>
    </style>

    <style name="whiteNoisesText2" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/ListMargin</item>
        <item name="android:textSize">@dimen/VolumeTextSize</item>
    </style>

    <style name="whiteNoisesSeek" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/CheckBoxSize</item>
        <item name="android:layout_margin">@dimen/ListMargin</item>
    </style>


    <!-- Lullabies -->
    <style name="lullabiesListLinear1a" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/WNCL1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="lullabiesListLinear1b" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/WNCL2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="lullabiesListText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ListTextSizeLula</item>
    </style>

    <style name="lullabiesListLinear2" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Settings-->
    <style name="settingsListLinear1a" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/WNCL1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="settingsListLinear1b" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/WNCL2</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="settingsListLinear2" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="settingsListLinear3" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="settingsListLinear4" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="settingsImages" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/ListMargin</item>
    </style>

    <style name="settingsText1" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/ListMargin</item>
        <item name="android:textSize">@dimen/SettingsTextSize</item>
    </style>

    <style name="settingsText2" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/ListMargin</item>
        <item name="android:textSize">@dimen/VolumeTextSize</item>
    </style>

    <style name="settingsSeek" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/CheckBoxSize</item>
        <item name="android:layout_margin">@dimen/ListMargin</item>
    </style>

    <style name="radioGroup" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/ListMargin</item>
        <item name="android:textSize">@dimen/VolumeTextSize</item>
    </style>

</resources>
