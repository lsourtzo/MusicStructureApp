                </LinearLayout>

            </LinearLayout>

            <!--                Kumbaya                   -->

            <LinearLayout style="@style/lullabiesListLinear1a">

                <TextView
                    style="@style/lullabiesListText"
                    android:text="@string/Lula11" />

                <LinearLayout style="@style/lullabiesListLinear2">

                    <CheckBox
                        android:id="@+id/LulaChBox11"
                        style="@style/ListCheck" />

                </LinearLayout>

            </LinearLayout>

            <!--                The Moon Lullaby                  -->

            <LinearLayout style="@style/lullabiesListLinear1b">

                <TextView
                    style="@style/lullabiesListText"
                    android:text="@string/Lula12" />

                <LinearLayout style="@style/lullabiesListLinear2">

                    <CheckBox
                        android:id="@+id/LulaChBox12"
                        style="@style/ListCheck" />

                </LinearLayout>

            </LinearLayout>

            <!--           Return To Main Activity Button               -->

            <Button
                android:id="@+id/returnToMainActivity"
                style="@style/ButtonStyle" />

        </LinearLayout>

    </ScrollView>

    <!--                    Startup Message                       -->

    <ScrollView
        android:id="@+id/disappearBox"
        style="@style/MessageScroll">

        <LinearLayout style="@style/MessageLinear">

            <TextView
                style="@style/MessageText"
                android:text="@string/LulaMessage" />

            <Button
                android:id="@+id/disappearButton"
                style="@style/ButtonStyle" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>