<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lsourtzo.app.musicapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WhiteNoises"
                  android:label="@string/whiteNoises"/>
        <activity android:name=".BabySongs"
                  android:label="@string/babySounds"/>
        <activity android:name=".SettingsActivity"
                  android:label="@string/settingsActivity"/>
        <activity android:name=".TimerActivity"
                  android:label="@string/timerActivity"/>
    </application>

</manifest>